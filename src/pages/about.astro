---
import { ViewTransitions } from 'astro:transitions'
import '../styles/global.css'

const pageTitle = 'About'
const identity = {
    firstName: 'Arman',
    country: 'Iran',
    profession: 'Software Engineer',
    hobbies: ['fast vimming', 'playing guitar', 'learning programming stuff'],
}
const skills = [
    'python and stuff',
    'go(gin)',
    'Rust(tokio, actix, warp)',
    'HTML',
    'CSS?',
    'TypeScript(types give me the illusion of being safe)',
    'React(not really)',
    'Astro',
]
const happy = false
const finished = false

const skillColor = 'navy'
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <ViewTransitions />
        <title>{pageTitle}</title>
        <style define:vars={{ skillColor }}>
            h1 {
                color: purple;
                font-size: 4rem;
            }
            .skill {
                color: var(--skillColor);
                font-weight: bold;
            }
            .hobby {
                color: green;
            }
        </style>
    </head>
    <body>
        <a href="/">Home</a> |
        <a href="/about/">About</a> |
        <a href="/blog/">Blog</a>
        <h1>{pageTitle}</h1>
        <h2>I still don't like web tough.</h2>
        {
            happy ? (
                <p>I am happy to be Alive!</p>
            ) : (
                <p>I'm not happy and life SUCKS!</p>
            )
        }
        {finished && <p>I finished this tutorial!</p>}
        <p>Here are a few facts about me:</p>
        <ul>
            <li>My name is {identity.firstName}.</li>
            <li>
                My hobbies are:
                <ul>
                    {
                        identity.hobbies.map((hobbie) => (
                            <li class="hobby">{hobbie}</li>
                        ))
                    }
                </ul>
            </li>
        </ul>
        <p>My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
    </body>
</html>
